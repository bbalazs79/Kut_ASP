@{
    ViewData["Title"] = "Login Page";
}
<body>
    <main class="container">

        <section class="login-container" id="animate">
           
             

            <form class="form-login">

                <label class="login-title">
                    <h1>Login to your account</h1>
                </label>
                <div class="div-login">


                    <label for="validationServer01">Email</label>
                    <input type="email" class="form-control is-valid" id="validationServer01" placeholder="email@email.com" required>


                    <label for="validationServer02">Password</label>
                    <input type="text" class="form-control is-valid" id="validationServer02" placeholder="password" required>


                    <div class="button_container">
                        <button class="btn btn-primary" type="submit"><i class="fas fa-sign-in-alt"></i>Sign in</button>
                        <p class="button_container_text">Don't you have an account?<span> <a href="Registration">Click here</a></span> to registration</p>
                    </div>
                </div>
                
            </form>
    
        </section>

    </main>
</body>


