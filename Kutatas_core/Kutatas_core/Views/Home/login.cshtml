@using Kutatas_core
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Kendo.Mvc
@using Kendo.Mvc.UI
@model User

@{
    ViewData["Title"] = "Login Page";
}
<body>
    <main class="container">

        <section class="login-container" id="animate">



            <form class="form-login">

                <label class="login-title">
                    <h1>Login to your account</h1>
                </label>
                <div class="div-login">

                    <label for="validationServer01">Email</label>
                    @Html.Kendo().TextBoxFor(x => x.Email).Name("Email");
                    <label for="validationServer02">Password</label>
                    @(Html.Kendo()
                     .TextBoxFor(m => m.Password)
                     .HtmlAttributes(new { type = "password" }))
                    <input type="password" class="form-control is-valid" id="password" placeholder="password" required>
                    <div class="button_container">
                        @(Html.Kendo().Button()
                          .Name("imageButton")
                          .HtmlAttributes(new { type = "button" })
                          .Events(x => x.Click("SelectUser")))
                        <p class="button_container_text">Don't you have an account?<span> <a href="Registration">Click here</a></span> to registration</p>
                    </div>
                </div>

            </form>

        </section>

    </main>
</body>


<script>
    function SelectUser() {
        debugger;
        $.post('/User/SelectUser', {
            email: $("#email").val()
        }, function (data) {
            return data;
            debugger;
        }, 'json');
    }
</script>